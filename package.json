{
   "name": "auto-commit-master",
   "displayName": "Auto Commit Master",
   "publisher": "SafdarAzeem",
   "description": "Generate commit messages automatically",
   "version": "0.0.3",
   "icon": "images/png/icon.png",
   "repository": "https://github.com/safdar-azeem/auto-commit-master",
   "engines": {
      "vscode": "^1.79.0"
   },
   "categories": [
      "Other",
      "SCM Providers"
   ],
   "keywords": [
      "auto",
      "commit",
      "message",
      "git",
      "automatic",
      "auto commit",
      "github",
      "generate",
      "generate commit",
      "master",
      "auto commit master",
      "bitbucket",
      "automation",
      "repo",
      "GitLens",
      "scm",
      "git extension",
      "auto pilot"
   ],
   "activationEvents": [],
   "main": "./dist/extension.js",
   "contributes": {
      "commands": [
         {
            "command": "auto-commit-master.start",
            "title": "Auto Commit Message",
            "icon": {
               "dark": "images/svg/start.svg",
               "light": "images/svg/start-light.svg"
            }
         },
         {
            "command": "auto-commit-master.stop",
            "title": "Stop Auto Commit Message",
            "icon": {
               "dark": "images/svg/stop.svg",
               "light": "images/svg/stop-light.svg"
            }
         }
      ],
      "menus": {
         "scm/title": [
            {
               "command": "auto-commit-master.start",
               "when": "scmProvider == git && !autoCommitMaster.active",
               "group": "navigation"
            },
            {
               "command": "auto-commit-master.stop",
               "when": "scmProvider == git && autoCommitMaster.active",
               "group": "navigation"
            }
         ]
      }
   },
   "scripts": {
      "vscode:prepublish": "yarn run package",
      "compile": "webpack",
      "watch": "webpack --watch",
      "package": "webpack --mode production --devtool hidden-source-map",
      "compile-tests": "tsc -p . --outDir out",
      "watch-tests": "tsc -p . -w --outDir out",
      "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
      "lint": "eslint src --ext ts",
      "test": "node ./out/test/runTest.js"
   },
   "devDependencies": {
      "@types/vscode": "^1.79.0",
      "@types/glob": "^8.1.0",
      "@types/mocha": "^10.0.1",
      "@types/node": "20.2.5",
      "@typescript-eslint/eslint-plugin": "^5.59.8",
      "@typescript-eslint/parser": "^5.59.8",
      "eslint": "^8.41.0",
      "glob": "^8.1.0",
      "mocha": "^10.2.0",
      "typescript": "^5.1.3",
      "ts-loader": "^9.4.3",
      "webpack": "^5.85.0",
      "webpack-cli": "^5.1.1",
      "@vscode/test-electron": "^2.3.2"
   },
   "prettier": {
      "printWidth": 110,
      "semi": true,
      "singleQuote": true,
      "trailingComma": "es5",
      "tabWidth": 3,
      "endOfLine": "auto",
      "bracketSameLine": true
   }
}
